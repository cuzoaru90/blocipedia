<h1>Public Wikis</h1>

<% @public_wikis.each do |wiki| %>

 <div class = 'row'>

  <div class="col-md-2 col-md-offset-3 no-overflow shift-down"> 
    <%= link_to wiki.markdown_title, wiki %> 
  </div> 

  <div class="col-md-2 col-md-offset-2 no-overflow shift-down">
    <% if policy(wiki).edit? %>
    <%= link_to "Edit", edit_wiki_path(wiki) %>
    <% end %>
  </div>

  </div>

 <% end %>

  <br>
  <%= will_paginate @public_wikis %>

