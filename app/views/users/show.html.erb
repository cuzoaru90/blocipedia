<% if @user == current_user %>
<h1>My Wikis</h1>
<% else %>
<h1> <%= @user.name %></h1>
<% end %>

<div class = "tall teal scrollable container">

<% @user.wikis.each do |wiki| %> 

<div class = 'row'>

  <div class="col-md-2 col-md-offset-3 no-overflow shift-down"> 
    <%= link_to wiki.title, wiki %> 
  </div> 

  <div class="col-md-2 no-overflow shift-down">
    <% if policy(wiki).edit? %>
    <%= link_to "Edit", edit_wiki_path(wiki) %>
    <% end %>
  </div>

  <div class="col-md-2 no-overflow shift-down">
    <% if policy(wiki).destroy? %>
    <%= link_to "Delete", wiki, method: :delete %>
    <% end %>
  </div>

  </div>

<% end %>

</div>

<div class = 'green-btn centered-text move-to-center'> 
  <% if @user == current_user %>
  <%= link_to "New Wiki", new_wiki_path %> 
  <% end %>
</div>